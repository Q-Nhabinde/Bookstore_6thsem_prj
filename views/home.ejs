                <button type="submit"><i class="fas fa-search"></i></button>
            </form>
        </div>
        <div class="menu">
            <ul>
                <% if(authenticated) { %>
                    <li><a href="/logout">Logout</a></li>
                   
                <% } else { %>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/register">Register</a></li>
                <% } %>
                <li style="margin-right: 80px;"><a href="/contact">Contact</a></li>
                <li style="margin-right: 25px;"><a href="/cart"><i class="fas fa-shopping-cart"></i></a></li>
            </ul>
        </div>
